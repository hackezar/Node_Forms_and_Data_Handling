<!-- views/updateUser.ejs -->
<!DOCTYE html>
<html>
   <head>
       <title><%= title %></title>
   </head>
   <body>
       <h1><%= title %></h1>
        <ul>
            <% if (locals.results) {%>
            <% results.forEach(result => { %>
            <li>
                <p>ID: <%= result.id %></p>
                <p>Name: <%= result.firstName %> <%= result.lastName %></p>
                <p>Email: <%= result.email %></p>
                <% if (result.age) {%>
                    <p><%= result.age %></p>
                <% } %>
                <% if (result.bio) {%>
                    <p><%= result.bio %></p>
                <% } %>
                <a href="/<%= result.id %>/update">Update</a>
                <!-- This time we're sending a POST request to our route, so we needa form -->
                 <form action="/<%= result.id %>/delete" method="POST" style="display: inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                 </form>
            </li>
        <% }); %>
    <% } %>
        </ul>
       <a href="/">Back to home</a>
   </body>
</html>